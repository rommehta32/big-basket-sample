<div class="row">
  <div class="col-xs-6 font-size-xlg">
    Items Inventory
  </div>
  <div class="col-xs-6 text-right">
    <% if current_user.is_admin? %>
      <%= link_to 'Add New Item', new_item_path %>
    <% end %>
  </div>
</div>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Quantity Available</th>
    <th>Unit Price</th>
    <% if current_user.is_admin? %>
      <th>Actions</th>
     <% end %>
  </tr>
  </thead>
  <tbody>
  <% if @items.length > 0 %>
    <% @items.each do |item| %>
      <tr class="item" data-id="<%= item.id %>">
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.unit_price %></td>
        <% if current_user.is_admin? %>
          <td><%= link_to 'Edit', edit_item_path(item.id) %> &nbsp; <span class="link delete-item">Delete</span> </td>
        <% end %>
      </tr>
    <% end %>
  <% else %>
    <tr> <td colspan="4" class="text-center">There are currently no items in inventory.</td></tr>
  <% end %>
  </tbody>
</table>

<script>
  var items = new BigBasket.Items($('.table'));
</script>